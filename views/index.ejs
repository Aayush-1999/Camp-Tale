<% include ./partials/header %>

<div class="container p-3 mb-5">
  <div class="row no-gutters text-center">
    <% if (noMatch) { %>
    <div class="col-md-12">
      <h4><%=noMatch%></h4>
    </div>
    <% } else {
      campground.forEach(camp=>{ %>
        <div class="col-12 col-sm-6 col-lg-4">
          <div class="img-thumbnail">
            <img src="<%= camp.image %>" class="img-fluid rounded card-image" alt="Responsive image">
            <div class="caption p-2">
              <%= camp.name %>
            </div>
            <p>
              <a href="/campground/<%=camp._id%>" class="btn btn-success">More Info</a>
            </p>
          </div>
        </div>
      <% })
    } %>
  </div>
</div>

<% include ./partials/footer %>